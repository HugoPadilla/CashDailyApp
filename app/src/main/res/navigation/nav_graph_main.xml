<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph_main"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.wenitech.cashdaily.features.home.ui.HomeFragment"
        android:label="Inicio"
        tools:layout="@layout/home_fragment">
        <action
            android:id="@+id/action_mainFragment_to_inicioSesionActivity"
            app:destination="@id/activityNavLogin"
            app:popUpTo="@id/activityNavLogin"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_mainFragment_to_nav_graph_login"
            app:destination="@id/nav_graph_login" />
        <action
            android:id="@+id/action_homeFragment_to_cobrarHoyFragment"
            app:destination="@id/cobrarHoyFragment" />
        <action
            android:id="@+id/action_homeFragment_to_vencidosFragment"
            app:destination="@id/vencidosFragment" />
    </fragment>
    <fragment
        android:id="@+id/clientFragment"
        android:name="com.wenitech.cashdaily.features.client.ui.ClientFragment"
        android:label="Clientes"
        tools:layout="@layout/fragment_client">
        <action
            android:id="@+id/action_clientFragment_to_newClientActivity"
            app:destination="@id/newClientActivity" />
    </fragment>
    <fragment
        android:id="@+id/cajaFragment"
        android:name="com.wenitech.cashdaily.features.caja.ui.BoxFragment"
        android:label="Caja"
        tools:layout="@layout/fragment_caja" />
    <fragment
        android:id="@+id/informeFragment"
        android:name="com.wenitech.cashdaily.features.informe.ui.InformeFragment"
        android:label="Informe"
        tools:layout="@layout/fragment_informe" />
    <activity
        android:id="@+id/activityNavLogin"
        android:name="com.wenitech.cashdaily.features.authentication.ui.LoginActivity"
        android:label="activity_inicio_sesion"
        tools:layout="@layout/activity_login" />
    <fragment
        android:id="@+id/perfilFragment"
        android:name="com.wenitech.cashdaily.features.userApp.ui.ProfileUserFragment"
        android:label="Perfil"
        tools:layout="@layout/fragment_perfil" />
    <fragment
        android:id="@+id/ajustesFragment"
        android:name="com.wenitech.cashdaily.features.userApp.ui.SettingsFragment"
        android:label="Ajustes"
        tools:layout="@layout/fragment_settings" />
    <fragment
        android:id="@+id/ayudaFragment"
        android:name="com.wenitech.cashdaily.features.userApp.ui.HelpFragment"
        android:label="Ayuda"
        tools:layout="@layout/fragment_help" />
    <fragment
        android:id="@+id/terminosFragment"
        android:name="com.wenitech.cashdaily.features.userApp.ui.TermsFragment"
        android:label="Terminos"
        tools:layout="@layout/fragment_terms" />
    <fragment
        android:id="@+id/acercadeFragment"
        android:name="com.wenitech.cashdaily.features.userApp.ui.AcercadeFragment"
        android:label="Acerca de"
        tools:layout="@layout/fragment_acercade" />
    <include app:graph="@navigation/nav_graph_login" />
    <fragment
        android:id="@+id/customerCreditFragment"
        android:name="com.wenitech.cashdaily.features.customerCredit.ui.CustomerCreditFragment"
        android:label="Credito activo"
        tools:layout="@layout/fragment_customer_credit">
        <argument
            android:name="clientObject"
            app:argType="com.wenitech.cashdaily.features.customerCredit.model.ClientParcelable" />
        <action
            android:id="@+id/action_customerCreditFragment_to_navigationNewCredit"
            app:destination="@id/navigationNewCredit">
            <argument android:name="idClient"
                app:argType="string"
                android:defaultValue="IDCLIENT"
                app:nullable="false"/>
        </action>


    </fragment>
    <action
        android:id="@+id/action_global_customerCreditFragment"
        app:destination="@id/customerCreditFragment" />
    <fragment
        android:id="@+id/cobrarHoyFragment"
        android:name="com.wenitech.cashdaily.features.home.ui.CobrarHoyFragment"
        android:label="CobrarHoyFragment"
        tools:layout="@layout/fragment_cobrar_hoy" />
    <fragment
        android:id="@+id/vencidosFragment"
        android:name="com.wenitech.cashdaily.features.home.ui.VencidosFragment"
        android:label="VencidosFragment"
        tools:layout="@layout/fragment_vencidos" />
    <fragment
        android:id="@+id/newClientActivity"
        android:name="com.wenitech.cashdaily.features.client.ui.NewClientFragment"
        android:label="Nuevo cliente"
        tools:layout="@layout/fragment_new_client" />

    <navigation android:id="@+id/navigationNewCredit"
        app:startDestination="@id/newCreditFragment">
        <fragment
            android:id="@+id/newCreditFragment"
            android:name="com.wenitech.cashdaily.features.customerCredit.ui.NewCreditFragment"
            android:label="Nuevo credito"
            tools:layout="@layout/fragment_new_credit">
            <argument
                android:name="idClient"
                app:argType="string"
                android:defaultValue="IDCLIENT"
                app:nullable="false"/>
            <action
                android:id="@+id/action_newCreditFragment_to_formPaymentFragment"
                app:destination="@id/formPaymentFragment" />
        </fragment>
        <fragment
            android:id="@+id/formPaymentFragment"
            android:name="com.wenitech.cashdaily.features.customerCredit.ui.formPaymentFragment"
            android:label="fragment_form_payment"
            tools:layout="@layout/fragment_form_payment" />
    </navigation>


</navigation>