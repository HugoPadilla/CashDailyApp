<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <gradient
                android:endColor="#66BB6A"
                android:gradientRadius="45"
                android:type="linear"
                android:startColor="#26A69A"
                />
            <corners android:radius="30dp"/>
            <stroke android:width="1dp"
                android:color="#006064"/>
        </shape>
    </item>

    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <gradient
                android:endColor="#99A5D6A7"
                android:gradientRadius="45"
                android:type="linear"
                android:startColor="#9980CBC4"
                />
            <corners android:radius="30dp"/>
            <stroke android:width="1dp"
                android:color="#80006064"/>
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
            <gradient
                android:endColor="#1DE9B6"
                android:gradientRadius="45"
                android:type="linear"
                android:startColor="#00BFA5"
                />
            <corners android:radius="30dp"/>
            <stroke android:width="1dp"
                android:color="#006064"/>
        </shape>
    </item>

</selector>