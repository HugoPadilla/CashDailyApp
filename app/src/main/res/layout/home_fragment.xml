                            android:layout_marginBottom="16dp"
                            android:text="Gasto"
                            android:textAlignment="center"
                            android:textColor="@color/onPrimary"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="@+id/textView37"
